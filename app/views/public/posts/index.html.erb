<h1>投稿一覧</h1>

<div>
  <% @post.each do |post| %>
    <% if post.image.present? %>
      <%= image_tag post.get_image %>
      <%= link_to post.title, post_path(post) %>
      <%= post.body %>
    <% else %>
      <!-- 画像が添付されていない場合の表示の記述 -->
      <%=link_to post.title, post_path(post) %>
      <%= post.body %>
    <% end %>
  <% end %>
</div>