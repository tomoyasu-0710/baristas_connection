<h1>投稿一覧</h1>

<h3>タグリスト</h3>
<div>
  <% @tag_list.each do |list| %>
    <%= link_to tag_posts_path(tag_id: list.id) do %>
      <i class="fa-solid fa-tag"><%= list.tag_name %></i>
      <%= "(#{list.posts.count})" %>
    <% end %>
  <% end %>
</div>

<div>
  <% @posts.each do |post| %>
    <% if post.image.present? %>
      <%= image_tag post.user.get_profile_image(100, 100) %>
      <%= post.user.name %>
      <%= link_to post.title, post_path(post) %>
      <%= post.body %>
      <%= image_tag post.get_image %>
    <% else %>
      <%= image_tag post.user.get_profile_image(100, 100) %>
      <%= post.user.name %>
      <%= link_to post.title, post_path(post) %>
      <%= post.body %>
    <% end %>

    <% post.tags.each do |tag| %>
      <%= link_to tag_posts_path(tag_id: tag.id) do %>
        <i class="fa-solid fa-tag"><%= tag.tag_name %></i>
      <% end %>
    <% end %>
  <% end %>
</div>
