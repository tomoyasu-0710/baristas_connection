

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Log in</h2>
      <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field">
        <label for="name">Name</label>
        <br>
         <%= f.text_field :name, autofocus: true, class: "name" %>
      </div>
      <div class="field">
        <label for="password">Password</label>
        <br>
        <%=f.password_field :password, autocomplete: "off", class:"password", id:"user_password" %>
      </div>
      <div class="field">
        <%= f.hidden_field :remember_me, value: 0, autocomplete: :off %>
        <%= f.check_box :remember_me, id: 'user_remember_me' %>
        <%= f.label :remember_me, "Remember me" %>
      </div>
      <div class="actions">
        <%= f.submit :"Log in", class:"btn btn-sm btn-primary" %>
      </div>
      <% end %>
      <a href=" /users/sign_up">Sign up</a><br>
      <a href=" /users/password/new">Forget your password?</a>
    </div>
  </div>
</div>

