<h1>カッピングノート作成</h1>

<%= form_with model: @cupping_note, method: :post do |f| %>

<h3>サンプル名</h3>
<%= f.text_field :sample_name %>

<h3>内容</h3>

<%= label_tag 'temp', 'ロースト' %><br/>
<%= range_field_tag 'roast', min: 1, max: 3, step: 1, list: 'values' %><br />

<datalist id="values">
  <option value="1" label="浅煎り">浅煎り</option>
  <option value="2" label="中煎り">中煎り</option>
  <option value="3" label="深煎り">深煎り</option>
</datalist>

<%= f.label :dry, "ドライ" %><br/>
<% range_values = (1..3).to_a %>
<%= f.range_field :dry, in: range_values, labels: range_values.join(", ") %>


<% end %>